Checks: 'readability-identifier-naming'
CheckOptions:
  # Function naming
  - key: readability-identifier-naming.FunctionCase
    value: lower_case
  
  # Member variable naming (with trailing underscore)
  - key: readability-identifier-naming.ClassMemberSuffix 
    value: '_'
  - key: readability-identifier-naming.ClassMemberCase
    value: lower_case
  
  # Class naming
  - key: readability-identifier-naming.ClassCase
    value: CamelCase

  # Static const rules for UPPER_SNAKE_CASE
  - key: readability-identifier-naming.StaticConstantCase
    value: UPPER_CASE
  - key: readability-identifier-naming.ConstexprVariableCase
    value: UPPER_CASE
    
  # Add these new rules for static class constants specifically
  - key: readability-identifier-naming.ClassConstantCase
    value: UPPER_CASE
  - key: readability-identifier-naming.StaticConstantMemberCase
    value: UPPER_CASE
  - key: readability-identifier-naming.StaticConstantMemberSuffix
    value: ''  # No suffix for static constants